<style>
    h1,
    table,
    th,
    td {
        /*border: 2px solid black;*/
        padding: 5px 10px;
        font-family: "Oxygen", sans-serif;
    }

    h1 {
      margin-bottom: 30px;
      font-weight: 700;
    }

    #create {
      margin-top: 30px;
      align-content: flex-end;
    }

</style>
<h1>Product Master List</h1>
<div class="container">
    <div class="row">


        <table>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Product Type</th>
                <th>Brand</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Active</th>
                <th>Action</th>
                <th>

                </th>

            </tr>
            <% products.forEach( product => { %>
                <tr>
                    <td>
                        <%= product.sku %>
                    </td>
                    <td>
                        <%= product.name %>
                    </td>
                    <td>
                        <%= product.productType %>
                    </td>
                    <td>
                        <%= product.brand %>
                    </td>
                    <td>
                        <%= product.quantity %>
                    </td>
                    <td>
                        <%= product.sellingPrice %>
                    </td>
                    <td>
                        <%= product.active %>
                    </td>
                    <td>
                        <a class="btn btn-default" href=<%= "/products/" + product._id %> >Edit Product</a>
                    </td>
                    <td>
                        <form method="POST" action=<%="/products/" + product._id + "?_method=DELETE" %> >
                            <button type="submit" class="btn btn-primary col-md-12">Delete Product</button>
                        </form>
                    </td>
                </tr>
                <% } ) %>
        </table>
        <a href="/products/new" id="create" class="btn btn-default">Create Product</a>

    </div>
</div>
<hr>
