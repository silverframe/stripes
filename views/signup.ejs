</style>

<!--Add a way to display flash messages-->

<% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
<% }%>

<div class="formContainer">
    <a href="/" class="cloudStoreLoginSignupBrand">CloudStore</a>
    <div class="loginSignupMessage">
        <p>Sign up for free today</p>
    </div>
    <div class="fields">
        <form method="post" action="/signup">
          <div class="form-group">
            <input class="form-control cs-formInput" type="text" name="organization_name" id="organization_name" placeholder="Organization Name">
          </div>

          <div class="form-group">
            <input class="form-control cs-formInput" type="text" name="name" id="name" placeholder="User Name">
          </div>

          <div class="form-group">
            <input class="form-control cs-formInput" type="text" name="email" id="email" placeholder="Email Address">
          </div>

          <div class="form-group">
            <input class="form-control cs-formInput" type="password" name="password" id="password" placeholder="Password">
          </div>

          <input class="btn btn-default loginSignupSubmitButton" type="submit" value="Let's Go">
        </form>
    </div>
    <div class="form-bottom-signup" >
        <span>Already have an account?</span><a href="/login" class="login-registerButton">Sign in to CloudStore</a>
    </div>
</div>
