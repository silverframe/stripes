<style>
table, th, td {
  padding: 5px 10px;
}

td {
  padding: 5px;
}

#submit {
  margin-top: 30px;
}

h1 {
  font-family: "Oxygen", sans-serif;
  font-weight: 700;
  margin-bottom: 30px;
  margin-top: 30px;
}

#quantity {
  text-align: center;
}

</style>
<h1>Sales Orders</h1>
<table class = "table-responsive">
  <tr>
    <th>Customer Name</th>
    <th>Customer Email</th>
    <th>Item</th>
    <th>Quantity</th>
    <th>Date Created</th>
    <th></th>
    <th></th>
  </tr>
<% sales.forEach(function (salesOrder) { %>
  <tr>
    <td><%= salesOrder.customerName %></td>
    <td><%= salesOrder.customerEmail %></td>
    <td>
    <% salesOrder.itemList.forEach( function(item) { %>
    <p><%= item.product.name %></p>
    <% })%>
    </td>
    <td id = "quantity">
    <% salesOrder.itemList.forEach( function(item) { %>
    <p><%= item.qty %></p>
    <% })%>
    </td>
    <td><%= salesOrder.createdDate.toDateString() %></td>
    <td>
      <a class = "btn btn-default" href= <%="/sales/"+ salesOrder._id %> >Edit Sale</a>
    </td>
    <td>
      <form method = "Post" action = <%="/sales/" +salesOrder._id + "?_method=DELETE" %> >
        <button type ="submit" class="btn btn-primary col-md-12">Delete Sale</button>
      </form>
    </td>
  </tr>
  <% }) %>

</table>
  <a class="btn btn-default" id="submit" href="/sales/new" role="button" >New Sales</a>
