<form method="post" action=<%="/sales/" + salesOrder._id + "?_method=PATCH" %> >
    <div class="form-group col-md-4">
        <label for="sku">Customer Name</label>
        <input class="form-control" type="text" id="customerName" value="<%= salesOrder.customerName %>">
    </div>

    <div class="form-group col-md-4">
        <label for="name">Customer Email</label>
        <input class="form-control" type="text" id="customerEmail" value="<%= salesOrder.customerEmail %>">
    </div>

    <div class="form-group col-md-4">
        <label for="description">Products</label>
        <input class="form-control" type="text" id="itemList" value="<%= salesOrder.itemList %>">
    </div>
    <div class="form-group col-md-2">
        <button type="submit" class="btn btn-primary col-md-12" value="Submit">Update Product</button>
    </div>

</form>
<form method="POST" action=<%="/sales/" + salesOrder._id + "?_method=DELETE" %> >
    <button type="submit" class="btn btn-danger col-md-2">Delete Sales Order</button>
</form>
